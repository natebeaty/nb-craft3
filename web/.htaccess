<IfModule mod_rewrite.c>
  RewriteEngine On

  # Force SSL
  RewriteCond %{REQUEST_URI} !\.well-known
  RewriteCond %{HTTP:X-Forwarded-SSL} !on
  RewriteCond %{HTTP_HOST} !^nb-craft\.localhost [NC]
  RewriteCond %{HTTP_HOST} !^nb-craft3\.localhost [NC]
  RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
  # No git
  RedirectMatch 404 /\.git

  # Remove www from url
  RewriteCond %{REQUEST_URI} !\.well-known
  RewriteCond %{HTTP_HOST} !^natebeaty\.com [NC]
  RewriteCond %{HTTP_HOST} !^nb-craft\.localhost [NC]
  RewriteCond %{HTTP_HOST} !^nb-craft3\.localhost [NC]
  RewriteCond %{HTTP_HOST} !^natebeaty\.webfactional\.com [NC]
  RewriteRule ^(.*)$ https://natebeaty.com/$1 [R=301,L]
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 7 days"
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType text/plain "access plus 1 month"
  ExpiresByType image/gif "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 week"
  ExpiresByType application/x-icon "access plus 1 year"
</IfModule>

<ifModule mod_headers.c>
  <filesMatch "\.(jpg|png|gif|css|js)$">
    Header set Cache-Control "public"
    # Remove ETAGs
    Header unset Pragma
    FileETag None
    Header unset ETag
  </filesMatch>
  <filesMatch "\.(html|php)$">
    Header set Cache-Control "private, must-revalidate"
  </filesMatch>
</ifModule>

<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/json
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE text/xml application/xml text/x-component
  AddOutputFilterByType DEFLATE application/xhtml+xml application/rss+xml application/atom+xml
  AddOutputFilterByType DEFLATE image/x-icon image/svg+xml application/vnd.ms-fontobject application/x-font-ttf font/opentype
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On

  # Send would-be 404 requests to Craft
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !^/(favicon\.ico|apple-touch-icon.*\.png)$ [NC]
  RewriteRule (.+) index.php?p=$1 [QSA,L]
</IfModule>
